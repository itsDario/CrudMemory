<%= form_for :user do |f| %>
<%= f.label :username,class:"blue-text"%>
<%= f.text_field :username%><br>
<%= f.label :password, "Confirm password",class: 'blue-text'%>
<%= f.password_field :password%><br>
<%= f.label :password_confirmation,class:"blue-text"%>
<%= f.password_field :password_confirmation%><br>
<%= f.submit "Edit User",id:'white'%>
<%end%>
